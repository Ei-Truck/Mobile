<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.eitruck.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_nav_home_to_nav_travel"
            app:destination="@id/nav_travel" />
        <action
            android:id="@+id/action_nav_home_to_nav_dash"
            app:destination="@id/nav_dash" />
    </fragment>
    <fragment
        android:id="@+id/nav_travel"
        android:name="com.example.eitruck.ui.travel.TravelFragment"
        android:label="TravelFragment" >
        <action
            android:id="@+id/action_nav_travel_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_travel_to_nav_dash"
            app:destination="@id/nav_dash" />
    </fragment>
    <fragment
        android:id="@+id/nav_dash"
        android:name="com.example.eitruck.ui.dash.DashFragment"
        android:label="fragment_travel"
        tools:layout="@layout/fragment_travel" >
        <action
            android:id="@+id/action_nav_dash_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_dash_to_nav_travel"
            app:destination="@id/nav_travel" />
    </fragment>
</navigation>