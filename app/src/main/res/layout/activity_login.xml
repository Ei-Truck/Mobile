<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Login">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="56dp"
          android:contentDescription="@string/app_name"
          app:srcCompat="@drawable/logo_eitruck" />

      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="52dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Email"
          android:textColor="@color/textColorPrimary" />

      <EditText
          android:id="@+id/editTextEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:background="@drawable/layout_input"
          android:hint="Digite seu email"
          android:inputType="textEmailAddress"
          android:padding="16dp" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Senha"
          android:textColor="@color/textColorPrimary" />

      <EditText
          android:id="@+id/editTextSenha"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:background="@drawable/layout_input"
          android:hint="Digite sua senha"
          android:inputType="textPassword"
          android:padding="16dp" />

      <TextView
          android:id="@+id/textViewForgotPass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Esqueceu a senha?"
          android:textAlignment="viewEnd"
          android:textColor="@color/textColorPrimary" />

      <Button
          android:id="@+id/buttonEntrar"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="36dp"
          android:background="@drawable/layout_botao1"
          android:fontFamily="@font/titulo_poppins_regular"
          android:text="Entrar"
          android:textColor="#FFFFFF" />

    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
