<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Login">

  <View
      android:id="@+id/loadingView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#32000000"
      android:clickable="true"
      android:elevation="98dp"
      android:focusable="true"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ProgressBar
      android:id="@+id/progressBar"
      style="@style/Widget.AppCompat.ProgressBar"
      android:layout_width="114dp"
      android:layout_height="114dp"
      android:layout_gravity="center"
      android:elevation="99dp"
      android:foregroundGravity="center"
      android:indeterminateTint="@color/colorTertiary"
      android:progressBackgroundTint="@color/colorTertiary"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible" />

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="56dp"
          android:contentDescription="@string/app_name"
          app:srcCompat="@drawable/caminhao_logo" />

      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="52dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Email"
          android:textColor="@color/textColorPrimary" />

      <EditText
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_margin="4dp"
          android:background="@drawable/layout_input"
          android:elevation="2dp"
          android:fontFamily="sans-serif"
          android:hint="Digite seu e-mail"
          android:paddingStart="16dp"
          android:paddingTop="12dp"
          android:paddingEnd="16dp"
          android:paddingBottom="12dp"
          android:singleLine="true"
          android:textColor="#000000"
          android:textColorHint="@color/textColorSecondary"
          android:textSize="16sp" />


      <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Senha"
          android:textColor="@color/textColorPrimary" />

      <EditText
          android:id="@+id/password"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_margin="4dp"
          android:background="@drawable/layout_input"
          android:elevation="2dp"
          android:fontFamily="sans-serif"
          android:hint="Digite sua senha"
          android:paddingStart="16dp"
          android:paddingTop="12dp"
          android:paddingEnd="16dp"
          android:paddingBottom="12dp"
          android:password="true"
          android:singleLine="true"
          android:textColor="#000000"
          android:textColorHint="@color/textColorSecondary"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/erro"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="8dp"
          android:text="Erro"
          android:textColor="@color/textColorSecondary"
          android:visibility="gone"
          tools:visibility="visible" />

      <TextView
          android:id="@+id/fogotPaswword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/texto_inter_regular"
          android:text="Esqueceu a senha?"
          android:textAlignment="viewEnd"
          android:textColor="@color/textColorPrimary" />

      <Button
          android:id="@+id/buttonEntrar"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="36dp"
          android:background="@drawable/layout_botao1"
          android:fontFamily="@font/titulo_poppins_regular"
          android:text="Entrar"
          android:textColor="#FFFFFF" />

    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
