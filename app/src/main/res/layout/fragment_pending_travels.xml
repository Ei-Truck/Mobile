<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.travel.analyzed_travels.AnalyzedTravels">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pending_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="4"
        tools:listitem="@layout/card_travel" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorTertiary"
        android:progressBackgroundTint="@color/colorTertiary"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>