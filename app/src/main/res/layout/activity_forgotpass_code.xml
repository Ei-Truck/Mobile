<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forgot_password.ForgotpassCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <include
            android:id="@+id/bntBackCode"
            layout="@layout/component_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/titulo_poppins_regular"
            android:text="Digite o Código"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digite o código enviado para  "
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:fontFamily="@font/sub_texto_inter_semibold"
                android:text="TextView"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCode1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_input"
                android:fontFamily="@font/titulo_bold_poppins_semibold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:padding="16dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextCode2"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/layout_input"
                android:fontFamily="@font/titulo_bold_poppins_semibold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:padding="16dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextCode3"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/layout_input"
                android:fontFamily="@font/titulo_bold_poppins_semibold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:padding="16dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextCode4"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/layout_input"
                android:fontFamily="@font/titulo_bold_poppins_semibold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:padding="16dp"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bntConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/layout_botao1"
            android:fontFamily="@font/titulo_poppins_regular"
            android:text="Confirmar"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
