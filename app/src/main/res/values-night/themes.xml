<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EiTruck" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Paleta escura -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/textColorPrimary</item>
        <item name="colorOnSurface">@color/textColorSecondary</item>

        <!-- Status e nav bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Tipografia (mantÃ©m a mesma do claro) -->
